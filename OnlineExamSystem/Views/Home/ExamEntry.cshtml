<hr />
<h1>ExamEntry</h1>


<div role="tabpanel" class="tab-pane" id="CreatExam">



    <div class="container">
        <div class="row form-horizontal">

            <div class="form-group">
                <div class="col-md-3">@Html.Label("Organization")</div>
                <div class="col-md-5">
                    <select>
                        <option>select..</option>
                    </select>
                </div>
            </div>

            <div class="container">
                <div class="row form-horizontal">

                    <div class="form-group">
                        <div class="col-md-3">@Html.Label("course")</div>
                        <div class="col-md-5">
                            <select>
                                <option>select..</option>
                            </select>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row form-horizontal">

                            <div class="form-group">
                                <div class="col-md-3">@Html.Label("Exam Type")</div>
                                <div class="col-md-5">
                                    <select>
                                        <option>Class Test,Lab Test</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-3">@Html.Label("Code")</div>
                                <div class="col-md-5">@Html.TextBox("ahdgh")</div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">@Html.Label("Topic")</div>
                                <div class="col-md-5">@Html.TextBox("ahdgh")</div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">@Html.Label("Full Marks ")</div>
                                <div class="col-md-5">@Html.TextBox("ahdgh")</div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">@Html.Label("Duration")</div>
                                <div class="col-md-5">@Html.TextBox("ahdgh")</div>
                            </div>
                            

                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <div class="col-md-5"><input type="submit" value="Save" class="btn btn-primary" /></div>
                            </div>

                        </div>

                    </div>

                </div>
            </div>

        </div>

    </div>
</div>